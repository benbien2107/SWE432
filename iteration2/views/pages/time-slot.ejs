<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://kit.fontawesome.com/06fcb987e4.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <!-- <script src="/script/time-slot.js" async></script> -->
</head>

<body>
    <%- include('../partials/sidebar.ejs') %>
        <main class="main-container">
            <nav class="topbar" style="border-radius: 10px">
                <%- include('../partials/prev-next-btn.ejs') %>
                    <audio controls>
                        <source clase="urlSource" type="audio/mpeg">
                        Your browser does not support the audio element.
                    </audio>
                    <%- include('../partials/topnav.ejs') %>
            </nav>
            <section class="content-container">
                <div class="publish">
                    <button id="publish-btn">Publish</button>
                    <dialog id="publish-dialog">
                        <form>
                            <h6>Do you want to publish this?</h6>
                        </form>
                        <footer>
                            <button id="no-btn">No</button>
                            <button id="yes-btn">Confirm</button>
                        </footer>
                    </dialog>
                </div>
                <div class="date-playlist">
                    <form style=" display: inline-flex" id="counterForm" method="post" action="/time-slot">
                        <input type="hidden" id="counterInput" name="counter" value="<%= counter %>">

                        <button type="submit" name="direction" value="left" class="fa-solid fa-chevron-left"></button>
                        <p class="customHr">
                            <%= data[counter].day %>
                                <%= data[counter].months %>
                                    <%= data[counter].year %>
                                        <%= data[counter].startHour %> to <%= data[counter].endHour %>
                        </p>
                        <button type="submit" name="direction" value="right" class="fa-solid fa-chevron-right"></button>
                    </form>
                </div>


                <div class="songs-list">
                    <!-- Place your dynamic content here using EJS tags -->
                    <% data[counter].songs.forEach((d)=>{ %>
                        <div class="songs-item">

                            <img src="<%= d.image %>" alt="Logo">

                            <ul>
                                <li style="color: antiquewhite;"><b>
                                        <%= d.name %>
                                    </b></li>
                                <li>Artist Name</li>
                                <li>
                                    <%= d.duration %>
                                </li>
                            </ul>
                            <button class="play-pause-btn" type="button"><i id="play-pause-icon" class="fa-solid fa-play"></i></button>
                            <form action="/time-slot/delete" method="post">
                                <input type="hidden" name="id" value="<%= d._id %>">
                                <button type="submit" class="delete">
                                    <i class="fa-solid fa-minus"></i>
                                </button>
                            </form>

                            <script>
                                const audio = document.querySelector("audio");
                                const audioSource = audio.querySelector("source");
                                document.querySelector('.play-pause-btn').addEventListener("click", (btn) => {
                                    let icon = document.getElementById("play-pause-icon");
                                    let item = icon.closest('.songs-item');

                                    if (icon.classList.contains("fa-play")) {
                                        let active = document.querySelector(".songs-item-active");
                                        if (active) {
                                            let btnActive = active.querySelector("button");
                                            let iconActive = btnActive.querySelector("i");
                                            iconActive.classList.remove("fa-pause");
                                            iconActive.classList.add("fa-play");
                                            active.classList.remove("songs-item-active");
                                        }
                                        icon.classList.remove("fa-play");
                                        icon.classList.add("fa-pause");
                                        item.classList.add("songs-item-active");

                                        audioSource.src = "<%= d.audio%>"; // Replace 'song.audio' with your desired audio source
                                        audio.load(); // Load the new source
                                        audio.play(); // Play the audio
                                    } else {
                                        icon.classList.remove("fa-pause");
                                        icon.classList.add("fa-play");
                                        item.classList.remove("songs-item-active");
                                        audio.pause();
                                    }
                                });

                            </script>
                        </div>

                        <% }) %>
                </div>

                <dialog class="edit-song-dialog" id="editSongDialog">
                    <h2>Edit Song</h2>
                    <form id="editSongForm">
                        <label for="editImage">Image URL:</label>
                        <input type="text" id="editImage" value="">
                        <br>
                        <label for="editAudio">Audio URL:</label>
                        <input type="text" id="editAudio" value="">
                        <br>
                        <label for="editName">Name:</label>
                        <input type="text" id="editName" value="">
                        <br>
                        <label for="editArtist">Artist:</label>
                        <input type="text" id="editArtist" value="">
                        <br>
                        <label for="editDuration">Duration:</label>
                        <input type="text" id="editDuration" value="">
                        <br>
                        <button type="button" id="editSongButton" value="default">Save</button>
                        <button type="button" id="cancelEditButton" formmethod="dialog">Cancel</button>
                    </form>
                </dialog>
            </section>
        </main>
</body>

</html>